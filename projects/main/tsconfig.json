{
	"extends": "../common/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src", // 기본 경로를 현재 프로젝트의 src 폴더로 설정 (상대 경로 대신 별칭 사용 가능)
		"paths": {
			"@common/*": ["../../common/*"] // '@common' 별칭을 'common' 폴더로 설정 (모듈 경로 참조 시 간단하게 사용 가능)
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
