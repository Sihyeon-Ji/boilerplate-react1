{
	"extends": "../common/tsconfig.json",
	"references": [{ "path": "./tsconfig.node.json" }],
	"compilerOptions": {
		"baseUrl": ".", // 기본 경로
		"paths": {
			"@/*": ["./src/*"], // '@' 별칭을 './src' 폴더로 설정
			"@common/*": ["../common/src/*"] // '@common' 별칭을 '../common/src' 폴더로 설정
		}
	},
	"include": ["src"]
}
